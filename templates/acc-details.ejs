<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <title>Hello, world!</title>
  </head>
  <body>
    <section>
    <div class="container mt-1 shadow-lg p-1" style="width: 100%;">
      <h2 style="margin-left: 60px;">Account Details</h2>
    <form>
        <div class="form-group">
          <label for="exampleInputEmail1">Name</label>
            <input type="text" value="<%= z.name%>" name="name" class="form-control" placeholder="product name" readonly>
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">phone</label>
          <input type="text" value="<%= z.phone%>" name="id" class="form-control" placeholder="product id" readonly>
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">email</label>
          <input type="email" value="<%= z.email%>" class="form-control" id="exampleInputPassword1" readonly>
        </div>
      </form>
      <div class="container mt-1 shadow-lg p-1" style="width: 35%;">
        
        </div>
        <h2 style="margin-left: 60px;">Purchased Book </h2>
        <table class="table" style="width: 100%;">
          <thead class="thead-light">
            <tr>
              <th scope="col">Book id</th>
              <th scope="col">Book name</th>
              <th scope="col">price</th>
              <th scope="col">count</th>
            </tr>
          </thead>
          <tbody>
            <% x.forEach((y)=>{%>
            <tr>
              <th scope="row"><%= y.id%></th>
              <td><%= y.name%></td>
              <td><%= y.total%></td>
              <td><%= y.count%></td>
            </tr>
            <%})%>
          </tbody>
        </table>
    </div>
        </section>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
</html>